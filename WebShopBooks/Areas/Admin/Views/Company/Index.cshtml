﻿@{
    ViewData["Title"] = "Companies";
}
@model List<Company>


<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h4 class="text-primary">
                Company list
            </h4>
        </div>

        <div class="col-6 text-end">
            <a asp-contoller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Company
            </a>
        </div>

    </div>
</div>

<table id="tblDataCompany" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                StreetAddress
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                PostalCode
            </th>
            <th>
                PhoneNumber
            </th>
            <th>

            </th>
        </tr>
    </thead>
    @* <tbody>

    </tbody> *@
</table>

@section Scripts {
    @{
        <script src="~/js/company.js"></script>
    }
}